@model List<AIIncidentAnalysisDocsFrontend.Dto.PdfDocumentDto>

@{
ViewData["Title"] = "Lista de Arquivos PDF";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id do arquivo</th>
        <th>Nome do Arquivo</th>
        <th>Data de Upload</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count > 0)
    {
    @foreach (var document in Model)
    {
        <tr>
            <td>@document.Id</td>
            <td>
                <a href="@Url.Action("Download", "Pdf", new { id = document.Id })" target="_blank">
                    @document.FileName
                </a>
            </td>
            <td>@document.UploadedAt.ToString("g")</td>
        </tr>
    }
    }
    else
    {
    <tr>
        <td colspan="3">Nenhum documento encontrado.</td>
    </tr>
    }
    </tbody>
</table>
