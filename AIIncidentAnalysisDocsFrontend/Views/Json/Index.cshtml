@model List<AIIncidentAnalysisDocsFrontend.Dto.JsonDocumentDto>

@{
ViewData["Title"] = "Lista de Documentos JSON";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.Message != null)
{
<div class="alert alert-danger">@ViewBag.Message</div>
}

<table class="table">
    <thead>
    <tr>
        <th>Id do Documento</th>
        <th>Nome do Arquivo</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count > 0)
    {
    @foreach (var document in Model)
    {
    <tr>
        <td>@document.Id</td>
        <td>@document.FileName</td>
        <td>
            <a href="@Url.Action("Download", "Json", new { id = document.Id })" class="btn btn-primary">Baixar</a>
            <a href="@Url.Action("ExtractProperties", "Json", new { id = document.Id })" class="btn btn-secondary">Extrair Propriedades</a>
        </td>
    </tr>
    }
    }
    else
    {
    <tr>
        <td colspan="3">Nenhum documento encontrado.</td>
    </tr>
    }
    </tbody>
</table>
