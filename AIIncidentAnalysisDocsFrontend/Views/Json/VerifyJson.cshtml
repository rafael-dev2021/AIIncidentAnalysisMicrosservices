@{
    ViewBag.Title = "Verificar JSON";
}

<h2>Verificar JSON</h2>

<form method="post" asp-action="VerifyJson">
    <div class="form-group">
        <label for="id">ID do Documento JSON:</label>
        <input type="text" name="id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Verificar JSON</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}